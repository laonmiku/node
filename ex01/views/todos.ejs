<h1><%=title%></h1>
<div id="todos">데이터없음</div>
<!--할일목록 템플릿-->
<script id="temp" type="x-handlebars-template">
    <table class="table table-striped table-hover">
        {{#each .}}
            <tr>
                <td>{{completed}}</td>
                <td{{id}}</td>
                <td>{{title}}</td>
            </tr>
        {{/each}}
    </table>
</script>

<script>
    getTodos(); //함수호출(아래위상관없음)

    function getTodos(){ //함수정의
        fetch('https://jsonplaceholder.typicode.com/todos/')
         .then(response => response.json())
         .then(json => {
            console.log(json);
            const temp = Handlebars.compile($("#temp").html())
                $("#todos").html(temp(json));
        })
    }
</script>

