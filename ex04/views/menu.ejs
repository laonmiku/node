  <script>
      const uid = sessionStorage.getItem('uid'); //uid값에 로그인한 uid를 가져옴
      //alert(uid);
      if(uid){
        $("#login").hide();
        $("#logout").show();
        $("#uid").show();
        $("#uid a").html(uid); //uid안에잇는 a태그
      }else{
        $("#login").show();
        $("#logout").hide();
        $("#uid").hide();
      }

      //로그아웃메뉴를 클릭한경우
      $("#logout").on("click","a",function(e){
        e.preventDefault();
        if(confirm("로그아웃하실래영?")){ //컨펌이라 확인취소로 팝업이 뜰꺼임!!
