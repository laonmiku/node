<h1>후기게시판</h1>

<div id="div_review"></div>
<script id="temp_review" type="x-handlebars-template">
    <table class="table table-striped table-hover">
        <tr>
            <td>ID</td>
            <td>제목</td>
            <td>글쓴이</td>
            <td>올린날</td>
        </tr>    
        {{#each .}}
            <tr>
                <td>{{rid}}</td>
                <td><a href="/review/read?rid={{rid}}">{{title}}</a></td>
                <td>{{uid}}</td>
                <td>{{fmtDate}}</td>
            </tr>    
        {{/each}}
    </table>    
</script>

<script>
    getData();

    function getData(){
        $.ajax({
            type:"get",
            url:"/review/list.json",
            dateType:"json",
            success:function(data){
                console.log(data);
                const temp=Handlebars.compile($("#temp_review").html());
                $("#div_review").html(temp(data));
            }
        })
    }
</script>